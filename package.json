{
  "name": "tagl",
  "version": "0.0.1",
  "description": "like signal-gl but without the signals",
  "author": "bigmistqke",
  "license": "MIT",
  "url": "https://github.com/bigmistqke/tagl",
  "scripts": {
    "dev": "vite serve dev",
    "ts-types": "tsc",
    "build:dev": "rimraf lib && tsup --watch",
    "build:prod": "rimraf dist && env NODE_ENV=production tsup",
    "build:watch": "tsup --watch",
    "lint:fix": "eslint ./src --ext .ts,.tsx --quiet --fix --ignore-path ./.gitignore",
    "lint:format": "prettier  --loglevel warn --write \"./**/*.{ts,tsx,css,md,json}\" ",
    "lint": "yarn lint:format && yarn lint:fix "
  },
  "devDependencies": {
    "@types/earcut": "^2.1.4",
    "@types/opentype.js": "^1.3.8",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "earcut": "^2.2.4",
    "opentype.js": "^1.3.4",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "tsup": "^6.0.1",
    "vite": "^5.0.12"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "gl-matrix": "^3.4.3",
    "typescript": "^4.7.2",
    "zeptoid": "^1.0.1"
  },
  "files": [
    "lib",
    "dist"
  ],
  "directories": {
    "lib": "lib"
  },
  "keywords": []
}
